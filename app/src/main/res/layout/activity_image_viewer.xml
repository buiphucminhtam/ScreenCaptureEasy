<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.minhtam.screencaptureeasy.Activity.ImageViewerActivity">


    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightMainImage">

        <ImageView
            android:id="@+id/imvMain"
            android:layout_gravity="center"
            android:layout_width="@dimen/widthMainImage"
            android:layout_height="@dimen/heightMainImage" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/rvListImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>




</LinearLayout>
